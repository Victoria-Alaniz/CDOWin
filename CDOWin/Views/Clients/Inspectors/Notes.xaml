<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CDOWin.Views.Clients.Inspectors.Notes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:CDOWin.ViewModels" 
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Notes"
                   Style="{StaticResource InspectorHeaderStyle}"/>

        <!-- Button Bar -->
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
            <Button Style="{StaticResource SingleIconButtonStyle}" Margin="4,4,16,0"
                    Height="38" Width="38" Visibility="Collapsed" x:Name="SaveButton"
                    Click="SaveButton_Click" ToolTipService.ToolTip="Save">
                <FontIcon Glyph="&#xE74E;" Style="{StaticResource SingleIconFontStyle}"/>
            </Button>
            <SplitButton  VerticalAlignment="Top" Margin="0,0,8,0" x:Name="NewButton"
                Style="{StaticResource SplitButtonCommandBarStyle}"
                Click="SplitButton_Click" ToolTipService.ToolTip="New Note">
                <FontIcon Glyph="&#xE710;" Style="{StaticResource SingleIconFontStyle}"/>
                <SplitButton.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuFlyoutItem Text="Edit" Icon="Edit" Click="EditButton_Click"/>
                    </MenuFlyout>
                </SplitButton.Flyout>
            </SplitButton>
        </StackPanel>

        <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="12,16,12,12"
                 IsReadOnly="True" CornerRadius="4" VerticalAlignment="Stretch"
                 Style="{StaticResource MultiLineTextBoxStyle}"
                 TextWrapping="Wrap" MaxHeight="1500" x:Name="NotesBox"
                 Text="{x:Bind ViewModel.Selected.ClientNotes, Mode=OneWay}"/>
    </Grid>
</Page>
